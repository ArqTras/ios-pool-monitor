<?xml version='1.0' encoding='utf-8'?>
<widget id="lol.turtlecoin.poolwatcher" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TRTL Pools</name>
    <description>
        Monitoring application for checking your Turtle Coin mining pool and worker status.
    </description>
    <author email="derpes@protonmail.com" href="https://turtlecoin.lol">
        derp-derp-derp
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/ldpi-36x36.png" />
        <icon density="mdpi" src="res/icon/android/mdpi-48x48.png" />
        <icon density="hdpi" src="res/icon/android/hdpi-72x72.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi-96x96.png" />
        <icon density="xxhdpi" src="res/icon/android/xxhdpi-144x144.png" />
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi-192x192.png" />
        <splash density="port-hdpi" src="res/screen/android/hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/xhdpi.png" />
        <splash density="port-xxhdpi" src="res/screen/android/xxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <preference name="target-device" value="universal" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash height="2732" src="res/screen/ios/Default@2x~universal~anyany.png" width="2732" />
        <icon gap:platform="ios" height="20" src="res/icon/ios/AppIcon-20x20@1x.png" width="20" />
        <icon gap:platform="ios" height="29" src="res/icon/ios/AppIcon-29x29@1x.png" width="29" />
        <icon gap:platform="ios" height="58" src="res/icon/ios/AppIcon-29x29@2x.png" width="58" />
        <icon gap:platform="ios" height="87" src="res/icon/ios/AppIcon-29x29@3x.png" width="87" />
        <icon gap:platform="ios" height="40" src="res/icon/ios/AppIcon-40x40@1x.png" width="40" />
        <icon gap:platform="ios" height="80" src="res/icon/ios/AppIcon-40x40@2x.png" width="80" />
        <icon gap:platform="ios" height="57" src="res/icon/ios/AppIcon-57x57@1x.png" width="57" />
        <icon gap:platform="ios" height="114" src="res/icon/ios/AppIcon-57x57@2x.png" width="114" />
        <icon gap:platform="ios" height="60" src="res/icon/ios/AppIcon-60x60@1x.png" width="60" />
        <icon gap:platform="ios" height="120" src="res/icon/ios/AppIcon-60x60@2x.png" width="120" />
        <icon gap:platform="ios" height="180" src="res/icon/ios/AppIcon-60x60@3x.png" width="180" />
        <icon gap:platform="ios" height="72" src="res/icon/ios/AppIcon-72x72@1x.png" width="72" />
        <icon gap:platform="ios" height="144" src="res/icon/ios/AppIcon-72x72@2x.png" width="144" />
        <icon gap:platform="ios" height="76" src="res/icon/ios/AppIcon-76x76@1x.png" width="76" />
        <icon gap:platform="ios" height="152" src="res/icon/ios/AppIcon-76x76@2x.png" width="152" />
        <icon gap:platform="ios" height="167" src="res/icon/ios/AppIcon-83.5x83.5@2x.png" width="167" />
        <icon gap:platform="ios" height="1024" src="res/icon/ios/AppIcon-1024@1x.png" width="1024" />
    </platform>
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <engine name="ios" spec="^4.5.4" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
